<% layout('layouts/boilerplate') %> 
<h1 style="text-align: center;">Register Your Profile Here!</h1>
<form action="/register" method= "POST" class = "validated-form" novalidate>
    <div class="row col-md-6 w-50 container d-flex mx-auto mt-4 mb-4">
        <div class="card shadow py-3" style= "width: 200;"> 
        <label for="username" class="form-label">Username</label>
        <input type="text" id= "username" class = "form-control" name = "username"  required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3 col-xs-6">
            <label for="username" class="form-label">Email</label>
            <input type="email" id= "email" class = "form-control " name = "email"  required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="username" class="form-label">Password</label>
            <input type="password" id= "password" class = "form-control" name = "password"  required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-block btn-success">Register</button>
        </div>
       
    </div>

    
   
</form>

