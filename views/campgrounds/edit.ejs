<% layout('layouts/boilerplate') %> 
    <h1 class="text-center">Editing <%= campground.title  %> </h1>
    <hr>
    <div class="row">
        
        <div class="col-6 offset-3 mt-4">
            
            <hr>
            <form action="/campgrounds/<%= campground.id%>?_method=PUT" method= "POST" class = "validated-form" novalidate enctype = "multipart/form-data">
            <div class = "mb-3" >
                <label class = "form-label"for="title">Campground Name:</label>
                <input class = "form-control" type="text" id="title" name = "campground[title]" value = "<%= campground.title  %> " required>
            </div>
            <div class = "mb-3">
                <label class = "form-label" for="location">Campground Location:</label>
                <input class = "form-control" type="text" id="location" name = "campground[location]" value = "<%= campground.location  %> " required>
            </div>

            <label for="price" class="form-label">Price:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <input type="text" placeholder = "0" id = "price" class="form-control" aria-label="Amount (to the nearest dollar)" name = "campground[price]" value ="<%= campground.price  %> " required>
                <div class="input-group-append">
                  <span class="input-group-text">.00</span>
                </div>
              </div>
            

            <div class="mb-3">
                <label for="image" class="form-label">Add Images</label>
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="images" name="images" multiple >
                        <label class="form-file-label" for="images">
                            <span class="form-file-text custom-file-label">Upload Camp image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class = "form-control" name="campground[description]" id="" cols="30" rows="5" required ><%= campground.description  %> </textarea>
            </div>

            <div class="mb-3">
                <% campground.images.forEach(function(img,i) { %> 
                    <img src="<%= img.thumbnail %>" class = "img-thumbnail" alt="">
                    <br>
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value= "<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>" >Delete</label>
                <% }) %> 
            </div>
            <button type="submit">Edit Campground</button>
    </form>
    <footer>
        <a href="/campgrounds/<%= campground.id  %> ">Back to <%= campground.title  %> Listing</a>
        <br>
        <a href="/campgrounds">Back to All Listings</a>
    </footer>
